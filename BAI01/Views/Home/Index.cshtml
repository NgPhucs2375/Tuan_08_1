
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<BAI01.Models.LoaiTinTuc>

<p>
    @Html.ActionLink("Thêm thể loại mới", "ThemMoi")
</p>
<table>
    <tr>
        <th>
            Tên thể loại
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.TenLoai)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaLoaiTinTuc });
                @Html.ActionLink("Details", "Details", new { id = item.MaLoaiTinTuc });
                @Html.ActionLink("Delete", "Delete", new { id = item.MaLoaiTinTuc });
            </td>
        </tr>
    }
</table>